<section>
	<h1>{{ titre|upper }}</h1>

	<form class="ajouter-utilisateur card-contenu" method="POST" action="creeUtilisateur">
		<h2 class="form-titre-haut">Add user</h2>
		{# <form class="ajouter-utilisateur" method="POST" action="membre?entite=utilisateur&action=a"> #}
		{{msgErrAjouterUtilisateur}}
		<div class="form-main">
			<label class="form-inputs">First name
				<input name="utilisateur_prenom" value="{{ utilisateur.utilisateur_prenom }}">
				<span>&nbsp;{{ erreurs.utilisateur_prenom }}</span>
			</label>
		</div>
		{{msgErrAjouterUtilisateur}}
		<div class="form-main">
			<label class="form-inputs">Last name
				<input name="utilisateur_nom" value="{{ utilisateur.utilisateur_nom }}">
				<span>&nbsp;{{ erreurs.utilisateur_nom }}</span>
			</label>
		</div>
		{{msgErrAjouterUtilisateur}}
		<div class="form-main">
			<label class="form-inputs">Email
				<input name="utilisateur_courriel" value="{{ utilisateur.utilisateur_courriel }}">
				<span>&nbsp;{{ errCourriel }}
					{{ erreurs.utilisateur_courriel }}</span>
			</label>
		</div>
		{{msgErrAjouterUtilisateur}}
		<div class="form-main">
			<label class="form-inputs">Password
				<input name="utilisateur_mdp" value="{{ utilisateur.utilisateur_mdp }}">
			</label>
			{# <span>&nbsp;{{ errCourriel }} {{ erreurs.utilisateur_courriel }}</span> TODO: #}
		</div>

		<input type="hidden" name="utilisateur_profil" value="2">


		<div class="form-inputs">
			<span>&nbsp;{{ erreurs.utilisateur_profil }}</span>
			<input type="Submit" value="Envoyer">
		</div>

	</form>
</div></section>
